<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 自定义标题栏样式 -->
    <style name="TitleBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#770000aa</item>
    </style>

    <!-- 分割线样式 -->
    <style name="GapLine">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#77000000</item>
    </style>

    <!-- 位置提示图标打开（on） -->
    <style name="on">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">1dp</item>
        <item name="android:src">@android:drawable/button_onoff_indicator_on</item>
    </style>

    <!-- 位置提示图标关闭（off） -->
    <style name="off">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">1dp</item>
        <item name="android:src">@android:drawable/button_onoff_indicator_off</item>
    </style>

    <!-- desc的TextView的样式 -->
    <style name="DescTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@android:drawable/ic_input_add</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- 下一步按钮样式 -->
    <style name="Next_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#700c</item>
    </style>

    <!-- 上一步按钮样式 -->
    <style name="Prev_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">20dp</item>
         <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#700c</item>
    </style>

</resources>