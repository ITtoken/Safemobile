<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:selfid="http://schemas.android.com/apk/res/com.example.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleBarStyle"
        android:text="设置中心" />

    <com.example.splash.SettingRelativeLayout
        android:id="@+id/sr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        selfid:desc_off="关闭"
        selfid:desc_on="开启"
        selfid:title="自动更新设置" >
    </com.example.splash.SettingRelativeLayout>

    <com.example.splash.SettingRelativeLayout
        android:id="@+id/location_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        selfid:desc_off="关闭"
        selfid:desc_on="开启"
        selfid:title="归属地查询自动捕捉" >
    </com.example.splash.SettingRelativeLayout>

    <com.example.splash.SettingRelativeLayout
        android:id="@+id/comming_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        selfid:desc_off="关闭"
        selfid:desc_on="开启"
        selfid:title="归属地来电显示" >
    </com.example.splash.SettingRelativeLayout>
    
          
    <LinearLayout
        android:id="@+id/shortcut_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_background_selector"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/point_r"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:paddingRight="10dp"
            android:text="创建桌面快捷方式"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shortcut_stat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:textColor="#77000000"
            android:textSize="13sp" />
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_margin="3dp"
            android:background="#33000000" />

    <LinearLayout
        android:id="@+id/commingstyle_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_background_selector"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/point_r"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:paddingRight="10dp"
            android:text="归属地显示样式"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_showstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="默认(半透明)"
            android:textColor="#77000000"
            android:textSize="13sp" />

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_margin="3dp"
            android:background="#33000000" />
    
    <LinearLayout
        android:id="@+id/commingshow_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_background_selector"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/point_r"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:paddingRight="10dp"
            android:text="来电显示位置设置"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_showloc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:textColor="#77000000"
            android:textSize="13sp" />
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_margin="3dp"
            android:background="#33000000" />
        
  
        
        

</LinearLayout>